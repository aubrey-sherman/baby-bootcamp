{
  "version": 2,
  "rewrites": [
    {
      "source": "/auth/(.*)",
      "destination": "/dist/server.js"
    }
  ],
  "headers": [
    {
      "source": "/(auth|users|feeding-routes)/(.*)",
      "headers": [
        { "key": "Access-Control-Allow-Credentials", "value": "true" },
        { "key": "Access-Control-Allow-Origin", "value": "https://present-turtles.surge.sh" },
        { "key": "Access-Control-Allow-Methods", "value": "GET,OPTIONS,PATCH,DELETE,POST,PUT" },
        { "key": "Access-Control-Allow-Headers", "value": "X-CSRF-Token, X-Requested-With, Accept, Accept-Version, Content-Length, Content-MD5, Content-Type, Date, X-Api-Version, Authorization, x-user-timezone" }
      ]
    }
  ],
  "outputDirectory": "dist"
}